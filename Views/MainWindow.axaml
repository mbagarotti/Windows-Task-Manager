<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Task_Manager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Task_Manager.Views.MainWindow"
        Icon="/Assets/icons8_ecg.ico"
        Title="Task_Manager"
        Background="#202020"
		CornerRadius="8"
	    ExtendClientAreaToDecorationsHint="True"
	    ExtendClientAreaChromeHints="PreferSystemChrome"
	    ExtendClientAreaTitleBarHeightHint="-1">

	<Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<!--
	Main Windows DockPanel)
		1-DockPanel (Left Panel Option Panel)
			1.1-StackPanel Vertical Main Options
			1.2-Botton Settings Options
		2-Stack Panel Horizontal Title Bar
		3-Stack Panel Horizontal Small Graphs
		4-Stack Panel Detail Graphs
	-->
	<DockPanel>
		<!--Left DockPanel With the options and setting button-->
		<DockPanel>
			
			<!--Left Stack Panel With main Options-->
			<StackPanel DockPanel.Dock="Top" Spacing="5" Orientation="Vertical" Width="50">
				
				<!--Menu button-->
				<Button HorizontalAlignment="Center" Background="Transparent" Margin="2 5 0 0" Width="40" Height="32">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/options_32px.png"/>
				</Button>
				
				<!--Processes button-->
				<Button ToolTip.Tip="Processes" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="40" Height="40">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/time_process.png"/>
				</Button>

				<!--Performance button-->
				<Button ToolTip.Tip="Performance" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="40" Height="40">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/performance_32px.png"/>
				</Button>

				<!--App History button-->
				<Button ToolTip.Tip="App history" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="40" Height="40">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/icons8_Loading_32px.png"/>
				</Button>

				<!--Startup apps button-->
				<Button ToolTip.Tip="Startup apps" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="40" Height="40">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/startup_app_32px.png"/>
				</Button>

				<!--Users button-->
				<Button ToolTip.Tip="Users" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="40" Height="40">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/users_32px.png"/>
				</Button>

				<!--Details button-->
				<Button ToolTip.Tip="Details" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="40" Height="40">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/details_32px.png"/>
				</Button>

				<!--Services button-->
				<Button ToolTip.Tip="Services" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="40" Height="40">
					<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/services_32px_1.png"/>
				</Button>
			</StackPanel>
			
			<!--Settings Button-->
			<Button Margin="0 0 0 10" ToolTip.Tip="Settings" HorizontalAlignment="Center" VerticalAlignment="Bottom" DockPanel.Dock="Left" Background="Transparent" Width="40" Height="40">
				<Image VerticalAlignment="Center" Height="24" Width="24" Source = "avares://Task_Manager/Assets/settings_32px.png"/>
			</Button>
		</DockPanel>

		<!--Tittle Bar StackPanel-->		
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top" VerticalAlignment="Top" Height="45" IsHitTestVisible="False" Background="Transparent">
			<Image Margin="10" VerticalAlignment="Bottom" Height="24" Width = "24" Source = "avares://Task_Manager/Assets/performance_graph_32px.png"/>
			<TextBlock VerticalAlignment="Center" Margin="0 15 0 0" Foreground="White" FontFamily="Aller Display" FontSize="15" Height="29" >Task Monitor</TextBlock>
		</StackPanel>

		<!--Info Graph StackPanel-->
		<StackPanel Spacing="5" Orientation="Vertical" Width="240" DockPanel.Dock="Left" Background="Blue">
			<Button IsVisible="False" Margin="5 10 0 0" VerticalAlignment="Center" Height="75" Width="210" Background="Gray"></Button>
			<Button Background="Gray"></Button>
			<Button Background="Gray"></Button>
			<Button Background="Gray"></Button>
			<Button Background="Gray"></Button>
		</StackPanel>

		<!--Details Graph StackPanel-->
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Background="Red">

		</StackPanel>
	</DockPanel>
</Window>
